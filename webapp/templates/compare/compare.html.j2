{% extends "base.html.j2" %}

{% block heading %}Compare Page
<style>
table.verticalDisplay thead {
float: left;
}

table.verticalDisplay thead th {
display: block;
}

table.verticalDisplay tbody {
float: right;
}

table.verticalDisplay tbody td {
display: block;
}
</style>
{% endblock %}

{% block content %}


    <div class="content">

        <h1 class="h3 mb-2 text-gray-800 fadeIn">Compare</h1>
        
        <p class="mb-4 fadeIn">Select the data you want to show in the DataTables below.</p>


        {# <div id="loading"></div> #}

        <!-- Content Row -->
        <div class="row" id="cards">
        
            <!-- Earnings (Monthly) Card Example -->
            <div class="col-sm-4 pb-3 compare_card" id="1">
                <div class="card border-left-primary fadeIn_slow shadow h-100 py-0">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="d-flex flex-row align-items-center justify-content-between">
                                    <div class="card_name text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Card 1</div>
                                    <div class="col-auto px-0">
                                        <button class="del_card btn btn-light">
                                            <i class="fas fa-times fa-w-11"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="h5 mb-1 font-weight-bold text-gray-800">Session ID:</div>
                                <select id="1" class='serial_num_select mb-3 custom-select custom-select-sm d-flex'></select>
                                
                                <div class="table-responsive">
                                    <table class="data_table table table-bordered" id="1" width="100%" cellspacing="0">
                                    {# <table width="100%" class="table table-striped table-bordered table-hover" id="data_table"> #}
                                        <thead></thead>
                                        <tbody></tbody>
                                    </table>
                                    <!-- /.table -->
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>


            <div class="col-sm-4 mb-3 align-self-center d-flex justify-content-center" id="buttons">
                
                <button class="btn btn-outline-primary fadeIn_slowly p-5" id="add_table">
                    <i class="fas fa-fw fa-plus fa-3x"></i>
                </button>
                
            </div>
        </div>

    </div>
    <!-- /.content -->



    <!-- jQuery -->
    <script src={{url_for('static', filename="vendor/jQuery-3.3.1/jquery-3.3.1.min.js")}}></script>    
    
    <script src={{url_for('static', filename="js/compare.js")}} type="text/javascript"></script>


{% endblock %}

{% block scripts %}

   <!-- DataTables JavaScript -->
   <script src={{url_for('static', filename="vendor/DataTables-1.10.25/js/jquery.dataTables.js")}}></script>
   {# <script src={{url_for('static', filename="vendor/datatables-plugins/dataTables.bootstrap.js")}}></script> #}
   <script src={{url_for('static', filename="vendor/Responsive-2.2.9/js/dataTables.responsive.js")}}></script>

{% endblock %}