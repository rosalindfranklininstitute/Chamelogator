   </div>
   <!-- /.Content Wrapper -->

   
    <div class="col-auto pb-2 px-0">
        <button id='y_limits_button' type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ylimitsModal">Y Limits</button>
    </div>
   

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Upload data file</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Please select the file you want to upload to the plot:</p>
                    <form enctype="multipart/form-data" id="modal_form_id"  method="post" action="">
                        <input id="modal_input_id" type="file" name="datafile">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id='import_data_button' type="button" class="btn btn-primary" data-bs-dismiss="modal">Upload file</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="ylimitsModal" tabindex="-1" aria-labelledby="ylimitsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ylimitsModalLabel">Limit Y Axis</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-1">Please select the y-axis range for the plot:</p>
                    <div class="d-flex flex-row align-items-center">
                        <div>
                        <form id="y_limits_form" role="form" action="">
                            {# <label for="y_limit_high" class="form-label">Y High</label> #}
                            <div class="input-group">
                                <input id="y_limit_high" name="y_limit_high" type="text" class="form-control mr-4 mb-4" placeholder="High Limit" aria-label="Y Limit High" aria-describedby="basic-addon1">
                            </div>
                            <br/>
                            <div class="input-group">
                                <input id="y_limit_low" name="y_limit_high" type="text" class="form-control mr-4" placeholder="Low Limit" aria-label="Y Limit Low" aria-describedby="basic-addon1">
                            </div>
                        </form>
                        </div>
                        <i class="far fa-chart-bar fa-9x"></i>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id='y_limits_submit' type="button" class="btn btn-primary" data-bs-dismiss="modal">Set Y Limits</button>
                    <button>Test1</button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src={{url_for('static', filename="vendor/jQuery-3.3.1/jquery-3.3.1.min.js")}}></script>
    <!-- charts.js -->
    <script src={{url_for('static', filename="vendor/chart.js-3.4.1/package/dist/chart.min.js")}}></script>
    <script src={{url_for('static', filename="vendor/node_modules/hammerjs/hammer.min.js")}}></script>
    <script src={{url_for('static', filename="vendor/node_modules/chartjs-plugin-zoom/dist/chartjs-plugin-zoom.min.js")}}></script>
    <!-- dropzone.js -->
    <script src={{url_for('static', filename="vendor/dropzone-5.7.0/dist/dropzone.js")}}></script>
    
    
    <script src={{url_for('static', filename="js/trends.js")}} type="text/javascript"></script>


